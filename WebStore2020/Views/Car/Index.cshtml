@model IEnumerable<WebStore2020.Models.CarViewModel>
@{
    ViewData["Title"] = "Index";
}

    <h1>Armen's Vehicle ShopOnline</h1>
    <a asp-action="Edit" class="btn btn-success">Add</a>
<table class=" table">
    @foreach (var item in Model)
    {
    <tr>
        <td> <a asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a></td>
        <td>@item.ID </td>
        <td>@item.Model </td>
        <td>@item.Price </td>
        <td>
            @Html.ActionLink("More details...", "Details", new { id = item.ID })
        </td>
        <td> <a asp-action="Delete" asp-route-id="@item.ID"><i class="fa fa-cut"></i></a></td>
    </tr>
    }

</table>